{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build/lib",
    "noImplicitAny": false,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "strict": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "truffle-contracts"]
  },
  "include": ["scripts/api.ts"],
  "exclude": ["node_modules", "build", "test/openzeppelin-contracts"]
}
