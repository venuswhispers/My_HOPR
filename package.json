{
  "name": "@hoprnet/hopr-ethereum",
  "version": "0.0.1",
  "description": "On-chain logic for hopr.network",
  "homepage": "https://hopr.network",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-ethereum.git"
  },
  "license": "LGPL-3.0-only",
  "private": false,
  "files": [
    "contracts/*.sol",
    "build/extracted/*.json"
  ],
  "engines": {
    "yarn": "^1.19.2",
    "node": "^12"
  },
  "scripts": {
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "format:sol": "prettier --write 'contracts/**/*.sol'",
    "build:tsc": "rm -f migrations/*.js* && tsc",
    "build:types": "typechain --target truffle --outDir './types/truffle-contracts' './build/contracts/*.json' && scripts/fix.sh",
    "build:sol": "yarn lint:sol && truffle compile && yarn build:types",
    "build": "yarn build:sol && yarn build:tsc",
    "extract": "rm -rf 'build/extracted' && ts-node ./scripts/extract-build.ts",
    "migrate": "yarn build && truffle migrate",
    "test": "yarn build && scripts/test.sh",
    "coverage": "yarn build && scripts/coverage.sh",
    "network": "ONLY_NETWORK=true scripts/test.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:sol && yarn build && yarn extract"
    }
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "https://github.com/hoprnet/hopr-utils.git",
    "@openzeppelin/contracts": "^2.4.0",
    "bignumber.js": "^9.0.0",
    "web3": "^1.2.4"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.4",
    "@truffle/hdwallet-provider": "^1.0.28",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "chai": "^4.2.0",
    "ganache-cli": "^6.7.0",
    "ganache-cli-coverage": "https://github.com/frangio/ganache-cli/releases/download/v6.4.1-coverage/ganache-cli-coverage-6.4.1.tgz",
    "husky": "^4.2.3",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.39",
    "solhint": "^2.3.0",
    "solidity-coverage": "^0.6.7",
    "truffle": "^5.1.3",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.5.4",
    "typechain": "^1.0.3",
    "typechain-target-truffle": "^1.0.2",
    "typescript": "^3.7.3"
  }
}
