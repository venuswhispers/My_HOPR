{
  "name": "hopr-ethereum",
  "version": "0.0.1",
  "description": "On-chain logic for hopr.network",
  "main": "index.ts",
  "repository": "git@github.com:hoprnet/hopr-ethereum.git",
  "author": "Robert Kiel <robert.kiel@validitylabs.org>",
  "license": "LGPL-3.0-only",
  "private": false,
  "dependencies": {
    "@openzeppelin/contracts": "^2.4.0",
    "@types/node": "^12.12.7"
  },
  "devDependencies": {
    "solhint": "^2.3.0",
    "truffle": "^5.1.3",
    "typescript": "^3.7.3"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "compile-ts": "tsc -d -p .",
    "compile-to-lib": "yarn compile-ts && cp -R ./contracts ./lib",
    "lint": "solhint \"contracts/**/*.sol\"",
    "postinstall": "yarn compile-to-lib",
    "compile": "yarn lint && yarn compile-to-lib && cd ./lib && truffle compile",
    "migrate": "yarn compile-to-lib && cd ./lib && truffle migrate",
    "test": "echo \"not implemented yet\"",
    "develop": "yarn compile-to-lib && cd ./lib && truffle develop"
  }
}
