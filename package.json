{
  "name": "hopr-ethereum",
  "version": "0.0.1",
  "description": "On-chain logic for hopr.network",
  "main": "index.ts",
  "repository": "git@github.com:hoprnet/hopr-ethereum.git",
  "author": "Robert Kiel <robert.kiel@validitylabs.org>",
  "license": "LGPL-3.0-only",
  "private": false,
  "engines": {
    "node": "v12"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^2.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "solhint": "^2.3.0",
    "solidity-coverage": "^0.6.7",
    "truffle": "^5.1.3",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.5.4",
    "typechain": "^1.0.3",
    "typechain-target-truffle": "^1.0.2",
    "typescript": "^3.7.3"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "postinstall": "yarn build",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "build:sol": "yarn lint:sol && truffle compile",
    "build:tsc": "tsc",
    "build:types": "typechain --target truffle --outDir './types/truffle-contracts' './build/**/*.json' && yarn postbuild:types",
    "postbuild:types": "ts-node ./scripts/fix-typechain.ts",
    "build": "yarn build:sol && yarn build:types",
    "develop": "truffle develop",
    "migrate": "yarn build:tsc && truffle migrate",
    "test": "truffle test",
    "coverage": "solidity-coverage"
  }
}
